<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Online Electrical Store</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-inter">
  <div class="container mx-auto px-4 py-8">

    <!-- Header -->
    <header class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-semibold text-blue-400">Online Electrical Store</h1>
      <nav>
        <a href="/" class="text-gray-300 hover:text-white mr-4">Home</a>
        <a href="#products" class="text-gray-300 hover:text-white mr-4">Products</a>
        <a href="#services" class="text-gray-300 hover:text-white">Services</a>
      </nav>
    </header>

    <!-- Search Bar -->
    <div class="relative w-full max-w-md mx-auto mb-8">
      <input
        type="text"
        placeholder="Search for products or services..."
        class="w-full px-4 py-2 pr-10 rounded-md bg-gray-800 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <svg class="absolute top-1/2 right-3 transform -translate-y-1/2 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
    </div>

    <!-- Products -->
    <section id="products" class="py-12">
      <h2 class="text-2xl font-semibold mb-8 text-center text-purple-400">Select Electrical Appliances</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Product Card Example -->
        <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-3 text-white">Smart Switch</h3>
          <p class="text-gray-300 mb-4">Remotely control lights and appliances from your phone.</p>
          <select id="qty-switch" class="w-full px-3 py-2 mb-4 rounded-md bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">Select Quantity</option>
            <option>1</option><option>2</option><option>3</option>
          </select>
          <button onclick="addToCart('Smart Switch', 'qty-switch')" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded w-full">Add to Cart</button>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-3 text-white">Surge Protector</h3>
          <p class="text-gray-300 mb-4">Protect your devices from voltage spikes.</p>
          <select id="qty-surge" class="w-full px-3 py-2 mb-4 rounded-md bg-gray-700 border border-gray-600 text-white">
            <option value="">Select Quantity</option>
            <option>1</option><option>2</option><option>3</option>
          </select>
          <button onclick="addToCart('Surge Protector', 'qty-surge')" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded w-full">Add to Cart</button>
        </div>

        <!-- Add more product cards as needed -->

      </div>
    </section>

    <!-- Services -->
    <section id="services" class="py-12">
      <h2 class="text-2xl font-semibold mb-8 text-center text-purple-400">Our Services & Maintenance</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-3 text-white">Generator Installation</h3>
          <p class="text-gray-300 mb-4">Professional generator setup at your home or office.</p>
          <button onclick="bookService('Generator Installation')" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded w-full">Book Now</button>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-3 text-white">Inverter Setup</h3>
          <p class="text-gray-300 mb-4">Reliable inverter installation for consistent power backup.</p>
          <button onclick="bookService('Inverter Setup')" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded w-full">Book Now</button>
        </div>

        <!-- Add more service cards as needed -->

      </div>
    </section>

    <!-- Description / Contact -->
    <section class="py-12">
      <h2 class="text-2xl font-semibold mb-8 text-center text-purple-400">Describe What You Want</h2>
      <textarea
        id="description-box"
        placeholder="Describe your electrical needs, including any specific requirements or services you are interested in."
        class="w-full px-4 py-3 rounded-md bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 h-28 resize-none mb-4"
      ></textarea>
      <button onclick="sendCustomRequest()" class="bg-yellow-500 hover:bg-yellow-600 text-white px-6 py-2 rounded-full font-semibold transition w-full md:w-auto">
        Send Request
      </button>
    </section>
  </div>

  <!-- JavaScript Functions -->
  <script>
    function addToCart(productName, quantityId) {
      const qty = document.getElementById(quantityId).value;
      if (!qty) {
        alert("Please select a quantity before adding to cart.");
        return;
      }
      alert(`${qty} Ã— ${productName} added to cart!`);
      // Later: Send this data to your backend with fetch()
    }

    function bookService(serviceName) {
      alert(`Booking request received for: ${serviceName}`);
      // Later: Open booking modal or send booking data to backend
    }

    function sendCustomRequest() {
      const message = document.getElementById("description-box").value;
      if (!message.trim()) {
        alert("Please describe your request before sending.");
        return;
      }
      alert("Your request has been submitted. Thank you!");
      // Later: Send the message to your backend
    }
  </script>
</body>
</html>
