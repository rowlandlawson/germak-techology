<%- include('partials/header') %>
<%- include('partials/alerts') %>
<section class="min-h-screen flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-4xl bg-white rounded-2xl shadow-lg overflow-hidden grid grid-cols-1 md:grid-cols-3">

    <!-- Left: Login Form -->
    <div class="md:col-span-2 p-8">
      <h2 class="text-3xl font-bold text-emerald-700 mb-6">Login to Your Account</h2>

      <form action="/dashboard" method="POST" class="space-y-6">
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-1">Email</label>
          <input type="email" name="username" id="email"
            class="w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
          <input type="password" name="password" id="password"
            class="w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-600 to-emerald-600 hover:from-blue-700 hover:to-emerald-700 text-white py-2 rounded-md font-semibold transition duration-300">
          Login
        </button>
      </form>
    </div>

    <!-- Right: OAuth Login -->
    <div class="bg-gray-100 p-8 flex flex-col justify-center border-l border-gray-200">
      <h3 class="text-lg font-semibold text-gray-700 mb-4">Or Sign in with</h3>
      <div class="space-y-4">
        <a href="/auth/google"
          class="flex items-center justify-center bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-md font-medium transition duration-300">
          <i class="fab fa-google mr-2"></i> Sign in with Google
        </a>
        <!-- <a href="/auth/facebook"
          class="flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md font-medium transition duration-300">
          <i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook
        </a> -->
      </div>
    </div>

  </div>
</section>

<%- include('partials/footer') %>
