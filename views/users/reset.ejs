<%- include('../partials/header') %>
<%- include('../partials/alerts') %>

<section class="min-h-screen flex items-center justify-center px-4 py-10">
    <form action="/reset" method="POST" class="space-y-4 max-w-md mx-auto p-6 border rounded-md">
    <div>
        <label for="username" class="block font-semibold mb-1">Email</label>
        <input type="email" name="username" id="username" required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" />
    </div>

    <div>
        <label for="token" class="block font-semibold mb-1">Reset Token</label>
        <input type="text" name="token" id="token" required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" />
    </div>

    <div>
        <label for="password" class="block font-semibold mb-1">New Password</label>
        <input type="password" name="password" id="password" required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" />
    </div>

    <button type="submit"
        class="w-full bg-gradient-to-r from-blue-600 to-emerald-600 hover:from-blue-700 hover:to-emerald-700 text-white py-2 rounded-md font-semibold transition duration-300">
        Reset Password
    </button>
    </form>
</section>
</body>
</html>