<%#- include('/partials/header') %>
<%#- include('/partials/alerts') %>

<%- include('../partials/header') %>
<%- include('../partials/alerts') %>

<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-4xl bg-white rounded-2xl shadow-lg overflow-hidden grid grid-cols-1 md:grid-cols-3">

    <!-- Register Form -->
    <div class="md:col-span-2 p-8">
      <h2 class="text-3xl font-bold text-emerald-700 mb-6">Create an Account</h2>
      <form action="/register" method="POST" class="space-y-4">

        <div>
          <label for="fullName" class="block text-sm font-medium text-gray-600">Full Name</label>
          <input type="text" name="fullName" id="fullName" required
            class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-400" />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
          <input type="email" name="username" id="email" required
            class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-400" />
        </div>

        <div>
          <label for="phone" class="block text-sm font-medium text-gray-600">Phone Number</label>
          <input type="tel" name="phone" id="phone" required
            class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-400" />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
          <input type="password" name="password" id="password" required
            class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-400" />
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-600">Confirm Password</label>
          <input type="password" name="confirmPassword" id="confirmPassword" required
            class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-400" />
        </div>

      <!-- Terms & Conditions Checkbox -->
        <div class="flex items-center space-x-2">
          <input type="checkbox" id="terms" name="terms" class="text-emerald-600">
          <label for="terms" class="text-sm text-gray-600">
            I agree to the <a href="/terms" class="text-emerald-600 underline">Terms & Conditions</a>
          </label>
        </div>

        <!-- Register Button (initially disabled) -->
        <button type="submit"
          id="registerBtn"
          class="w-full bg-gradient-to-r from-blue-600 to-emerald-600 text-white py-2 rounded-md font-semibold transition duration-300 opacity-50 cursor-not-allowed"
          disabled>
          Register
        </button>

      </form>
    </div>

    <!-- Social Login -->
    <div class="bg-gray-100 p-8 flex flex-col justify-center border-l border-gray-200">
      <h3 class="text-lg font-semibold text-gray-700 mb-4">Or Sign Up with</h3>
      <div class="space-y-4">
        <a href="/auth/google"
          class="flex items-center justify-center w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg mb-3 transition duration-300">
          <i class="fab fa-google mr-2"></i> Google
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>