<%- include('../partials/header') %>
<%- include('../partials/alerts') %>

<section class="min-h-screen flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg overflow-hidden grid grid-cols-1">

    <!-- Admin Login Form -->
    <div class="p-8">
      <h2 class="text-3xl font-bold text-emerald-700 mb-6"><i class="fa fa-user-shield text-emerald-600 mr-2"></i>
      </i>

        Admin Login </h2>

      <form action="/admin/login" method="POST" class="space-y-6">
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-1">Username</label>
          <input type="text" name="username" id="email"
            class="w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
      
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
          <input type="password" name="password" id="password"
            class="w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-600 to-emerald-600 hover:from-blue-700 hover:to-emerald-700 text-white py-2 rounded-md font-semibold transition duration-300">
          Login as Admin
        </button>
      </form>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
