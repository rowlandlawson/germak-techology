<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-12">
  <div class="max-w-md w-full bg-white shadow-lg rounded-xl p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Update Email Address</h2>

    <%- include('../partials/alerts') %>

    <form action="/admin/update-email" method="POST" class="space-y-4">
      <div>
        <label for="newEmail" class="block text-sm font-medium text-gray-700 mb-1">New Email Address</label>
        <input
          type="email"
          id="newEmail"
          name="newEmail"
          value="<%= email %>"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-blue-200 focus:outline-none"
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition"
      >
        Update Email
      </button>
    </form>

    <div class="mt-4 text-center">
      <a href="/admin/dashboard" class="text-blue-600 hover:underline">← Back to Dashboard</a>
    </div>
  </div>
</div>

<%- include('../partials/admin_footer') %>
