<%- include('partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
  <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-xl font-semibold mb-4 text-center text-gray-800">Email Verification</h2>

    <p class="mb-4 text-center text-gray-600">
      Verification code was sent to <span class="font-medium"><%= email %></span>
    </p>

    <form action="/verify" method="POST" class="space-y-4">
      <input
        type="text"
        name="code"
        required
        placeholder="Enter verification code"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-black"
      />

      <div class="flex justify-between gap-2">
        <button
          type="submit"
          class="w-1/2 bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition"
        >
          Verify
        </button>
        <a
          href="/verify/resend"
          class="w-1/2 text-center bg-gray-200 text-gray-800 py-2 rounded-md hover:bg-gray-300 transition"
        >
          Resend Code
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
