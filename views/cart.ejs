<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/storeHead') %>
  <title>My Cart</title>
</head>
<body class="bg-gray-900 text-white font-inter">
  <div class="container mx-auto px-4 py-8">
    <%- include('partials/storeNavbar') %>

    <h1 class="text-3xl font-semibold mb-6 text-blue-400">ðŸ›’ My Cart</h1>

    <% if (cart.length === 0) { %>
      <p class="text-gray-400">Your cart is currently empty.</p>
    <% } else { %>
      <ul class="space-y-4">
        <% cart.forEach(item => { %>
          <li class="bg-gray-800 p-4 rounded-lg flex justify-between items-center">
            <div>
              <h3 class="text-white font-semibold"><%= item.name %></h3>
              <p class="text-gray-400">Qty: <%= item.quantity %></p>
            </div>
            <p class="text-green-400 font-bold">â‚¦<%= (item.quantity * item.price).toLocaleString() %></p>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>
